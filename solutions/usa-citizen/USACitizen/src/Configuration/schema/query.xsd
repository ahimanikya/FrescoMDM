<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	<xs:element name="Configuration">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="QueryBuilderConfig"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="QueryBuilderConfig">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="query-builder" maxOccurs="unbounded"/>
			</xs:sequence>
			<xs:attribute name="module-name" type="xs:string" use="required"/>
			<xs:attribute name="parser-class" type="xs:string" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="block-definition">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="hint" minOccurs="0"/>
				<xs:element ref="block-rule"/>
			</xs:sequence>
			<xs:attribute name="number" use="required">
				<xs:simpleType>
					<xs:restriction base="xs:NMTOKEN"/>
				</xs:simpleType>
			</xs:attribute>
		</xs:complexType>
	</xs:element>
	<xs:element name="hint" type="xs:string"/>
	<xs:element name="block-rule">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="equals" minOccurs="0" maxOccurs="unbounded"/>
                                <xs:element ref="not-equals" minOccurs="0" maxOccurs="unbounded"/>
                                <xs:element ref="greater-than-or-equal" minOccurs="0" maxOccurs="unbounded"/>
                                <xs:element ref="less-than-or-equal" minOccurs="0" maxOccurs="unbounded"/>
				<xs:element ref="range" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="range">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="field"/>
				<xs:element ref="source"/>
				<xs:element ref="default" minOccurs="0"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="default">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="lower-bound" minOccurs="0"/>
				<xs:element ref="upper-bound" minOccurs="0"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="lower-bound">
		<xs:complexType>
			<xs:simpleContent>
				<xs:extension base="bound-value">
					<xs:attribute name="type" use="required">
						<xs:simpleType>
							<xs:restriction base="xs:string">
								<xs:enumeration value="constant"/>
								<xs:enumeration value="offset"/>
							</xs:restriction>
						</xs:simpleType>
					</xs:attribute>
				</xs:extension>
			</xs:simpleContent>
		</xs:complexType>
	</xs:element>
	<xs:element name="upper-bound">
		<xs:complexType>
			<xs:simpleContent>
				<xs:extension base="bound-value">
					<xs:attribute name="type" use="required">
						<xs:simpleType>
							<xs:restriction base="xs:string">
								<xs:enumeration value="constant"/>
								<xs:enumeration value="offset"/>
							</xs:restriction>
						</xs:simpleType>
					</xs:attribute>
				</xs:extension>
			</xs:simpleContent>
		</xs:complexType>
	</xs:element>
	<xs:simpleType name="bound-value">
		<xs:restriction base="xs:string">
			<xs:minLength value="1"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:element name="config">
		<xs:complexType>
			<xs:choice>
				<xs:element ref="option"/>
				<xs:element ref="block-definition" maxOccurs="unbounded"/>
			</xs:choice>
		</xs:complexType>
	</xs:element>
	<xs:element name="equals" type="sourceType">
	</xs:element>
	<xs:element name="not-equals" type="sourceType">
	</xs:element>
        <xs:element name="greater-than-or-equal" type="sourceType">
	</xs:element>
	<xs:element name="less-than-or-equal" type="sourceType">
	</xs:element>

	<xs:element name="field">
		<xs:simpleType>
			<xs:restriction base="xs:string"/>
		</xs:simpleType>
	</xs:element>
	<xs:element name="option">
		<xs:complexType>
			<xs:attribute name="key" type="xs:string" use="required"/>
			<xs:attribute name="value" use="required">
				<xs:simpleType>
					<xs:restriction base="xs:NMTOKEN">
						<xs:enumeration value="false"/>
						<xs:enumeration value="true"/>
					</xs:restriction>
				</xs:simpleType>
			</xs:attribute>
		</xs:complexType>
	</xs:element>
	<xs:element name="query-builder">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="config"/>
			</xs:sequence>
			<xs:attribute name="name" use="required">
				<xs:simpleType>
					<xs:restriction base="xs:NMTOKEN"/>
				</xs:simpleType>
			</xs:attribute>
			<xs:attribute name="class" use="required">
				<xs:simpleType>
					<xs:restriction base="xs:NMTOKEN"/>
				</xs:simpleType>
			</xs:attribute>
			<xs:attribute name="parser-class" use="required">
				<xs:simpleType>
					<xs:restriction base="xs:NMTOKEN"/>
				</xs:simpleType>
			</xs:attribute>
			<xs:attribute name="standardize" type="xs:boolean" use="required"/>
			<xs:attribute name="phoneticize" use="required">
				<xs:simpleType>
					<xs:restriction base="xs:NMTOKEN">
						<xs:enumeration value="false"/>
						<xs:enumeration value="true"/>
					</xs:restriction>
				</xs:simpleType>
			</xs:attribute>
		</xs:complexType>
	</xs:element>
	<xs:element name="source">
            <xs:simpleType>
                <xs:restriction base="xs:string"/>
            </xs:simpleType>
        </xs:element>
	<xs:element name="constant">
            <xs:simpleType>
                <xs:restriction base="xs:string"/>
            </xs:simpleType>
	</xs:element>
	<xs:element name="offset">
            <xs:simpleType>
                <xs:restriction base="xs:string"/>
            </xs:simpleType>
	</xs:element>
        <xs:complexType name="sourceType">
            <xs:sequence>
		<xs:element ref="field"/>
                <xs:choice>
                    <xs:element ref="source"/>
                    <xs:element ref="constant"/>
                    <xs:element ref="offset"/>
                </xs:choice>
            </xs:sequence>
        </xs:complexType>

</xs:schema>
