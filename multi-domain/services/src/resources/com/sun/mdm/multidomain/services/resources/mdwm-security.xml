<?xml version="1.0" encoding="UTF-8"?>
<!-- NOTE:  This is a sample file.  It contains the basic format for the security -->
<!-- configuration file (mdwm-security.xml)                                               -->
<mdwm-security xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="schema/mdwm-security.xsd">
    <roles>
        <role>
            <role-name>MDWM.Administrator</role-name>
            <operations>
                <name>AdminRelationships_ReadWrite</name>
                <name>AdminHierarchies_ReadWrite</name>
                <name>ManageRelationship_ReadWrite</name>
                <name>ManageHierarchies_ReadWrite</name>
            </operations>
        </role>
        
        <role>
            <role-name>MDWM.ManageRelationship</role-name>
            <operations>
                <name>ManageRelationship_ReadWrite</name>
            </operations>
        </role>
        
        <role>
            <role-name>MDWM.ManageHierarchies</role-name>
            <operations>
                <name>ManageHierarchies_ReadWrite</name>
            </operations>
        </role>
        
        <role>
            <role-name>MDWM.ViewOnly</role-name>
            <operations>
                <name>ManageRelationship_ViewOnly</name>
                <name>ManageHierarchies_ViewOnly</name>
            </operations>
        </role>
        
        
        <role>
          <role-name>MDWM.FutureUse</role-name>
            <operations>
                <name>AdminRelationships_ViewOnly</name>
                <name>AdminHierarchies_ViewOnly</name> 
                <name>AdminGroups_ReadWrite</name>
                <name>AdminGroups_ViewOnly</name>
                <name>AdminCategories_ReadWrite</name>
                <name>AdminCategories_ViewOnly</name>
                <name>ManageGroups_ReadWrite</name>
                <name>ManageGroups_ViewOnly</name>
                <name>ManageCategories_ReadWrite</name>
                <name>ManageCategories_ViewOnly</name>
            </operations>
        </role>
 
    </roles>
</mdwm-security>
