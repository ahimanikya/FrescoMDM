<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
    
    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>
    
    <!--
      - Most controllers will use the ControllerClassNameHandlerMapping above, but
      - for the index controller we are using ParameterizableViewController, so we must
      - define an explicit mapping for it.
      -->
    <bean id="loginController" class="com.sun.mdm.multidomain.presentation.web.LoginController">
        <property name="commandName"><value>applicationHandler</value></property>
        <property name="commandClass"><value>com.sun.mdm.multidomain.presentation.beans.ApplicationHandler</value></property>
    </bean>
    
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/index.htm">indexController</prop>
                <prop key="/login.htm">loginController</prop>
                <prop key="/administration.htm">administration</prop>
                <prop key="/manage.htm">manage</prop>            
                <prop key="/managerelationshipdef.htm">manageRelationshipDef</prop>                
                <prop key="/managerelationship.htm">manageRelationship</prop>                
                <prop key="/managehierarchydef.htm">manageHierarchyDef</prop>                
                <prop key="/managehierarchy.htm">manageHierarchy</prop>                                
            </props>
        </property>
    </bean>
    <!--
      - View resolver provides a mapping between view names and actual view.
      --> 
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />    
    <!--
      - The index controller.
      -->
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />
    
    <bean name="manageRelationshipDef" 
          class="com.sun.mdm.multidomain.presentation.web.RelationshipDefController" />

    <bean name="manageRelationship" 
          class="com.sun.mdm.multidomain.presentation.web.RelationshipController" />

    <bean name="manageHierarchyDef" 
          class="com.sun.mdm.multidomain.presentation.web.HierarchyDefController" />

    <bean name="manageHierarchy" 
          class="com.sun.mdm.multidomain.presentation.web.HierarchyController" />
          
    <bean name="administration" 
          class="com.sun.mdm.multidomain.presentation.web.AdministrationController" />
    <bean name="manage" 
          class="com.sun.mdm.multidomain.presentation.web.ManageController" />
     
</beans>
